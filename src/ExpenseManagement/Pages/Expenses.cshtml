@page
@model ExpenseManagement.Pages.ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-banner">
        <div class="error-content">
            <span class="error-icon">⚠️</span>
            <div class="error-text">
                <strong>Database Connection Error</strong>
                <p>@Model.ErrorMessage</p>
                @if (!string.IsNullOrEmpty(Model.ErrorSource))
                {
                    <small>Source: @Model.ErrorSource</small>
                }
            </div>
        </div>
    </div>
}

<div class="page-container">
    <div class="page-header">
        <h1>Expenses</h1>
        <a href="/NewExpense" class="btn btn-primary">+ New Expense</a>
    </div>

    <div class="card">
        <div class="filter-bar">
            <form method="get" class="filter-form">
                <div class="filter-group">
                    <label for="filter">Filter:</label>
                    <input type="text" id="filter" name="filter" value="@Model.Filter" placeholder="Search expenses..." class="filter-input" />
                </div>
                <div class="filter-group">
                    <label for="status">Status:</label>
                    <select id="status" name="status" class="filter-select">
                        <option value="">All</option>
                        @foreach (var status in Model.Statuses)
                        {
                            <option value="@status.StatusName" selected="@(Model.Status == status.StatusName)">@status.StatusName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-secondary">Apply Filter</button>
            </form>
        </div>

        <div class="table-container">
            <table class="expenses-table">
                <thead>
                    <tr>
                        <th>DATE</th>
                        <th>EMPLOYEE</th>
                        <th>CATEGORY</th>
                        <th>AMOUNT</th>
                        <th>STATUS</th>
                        <th>DESCRIPTION</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd MMM yyyy")</td>
                            <td>@expense.UserName</td>
                            <td>@expense.CategoryName</td>
                            <td>£@expense.Amount.ToString("N2")</td>
                            <td>
                                <span class="status-badge status-@expense.StatusName?.ToLower()">@expense.StatusName</span>
                            </td>
                            <td>@expense.Description</td>
                            <td>
                                @if (expense.StatusName == "Draft")
                                {
                                    <form method="post" asp-page-handler="Submit" asp-route-id="@expense.ExpenseId" style="display:inline">
                                        <button type="submit" class="btn btn-small btn-primary">Submit</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
